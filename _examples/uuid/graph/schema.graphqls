# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  text: String!
  uid: UUID!
  pid: UUID
}


type Query {
  todos: [Todo!]!
}

input NewTodo {
  text: String!
  userId: String!
  uid: UUID!
  pid: UUID
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}

scalar UUID
